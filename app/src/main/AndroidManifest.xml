<?xml version="1.0" encoding="utf-8"?>
<manifest package="test.tencent.com.test"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".page.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".page.SecondActivity">
        </activity>
        <activity android:name=".page.SurfaceViewActivity">
        </activity>
        <activity
            android:name=".page.PainterActivity"
            android:label="@string/title_activity_painter"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>